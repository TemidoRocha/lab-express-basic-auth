<form action="/sign-up" method="POST">

  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" placeholder="{{user.name}}" />

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="{{user.email}}" />

  <label for="input-password">Password</label>
  <input type="password" name="password" id="input-password" placeholder="A Strong Password" />

  <button>Update Profile</button>
</form>